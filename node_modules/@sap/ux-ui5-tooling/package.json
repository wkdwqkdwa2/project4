{
  "name": "@sap/ux-ui5-tooling",
  "displayName": "SAP Fiori Tools – UI5 Tooling",
  "version": "1.15.3",
  "description": "SAP Fiori Tools – UI5 Tooling",
  "publisher": "SAPSE",
  "license": "SEE LICENSE IN LICENSE",
  "bin": {
    "fiori": "bin/fiori"
  },
  "private": false,
  "scripts": {
    "clean:dist": "rimraf ./dist ./generators *.tsbuildinfo",
    "clean": "rimraf ./.webpack_cache",
    "build:compile": "tsc --build ./ --pretty --dry",
    "build:bundle": "node esbuild.js",
    "build:copyTemplates1": "copyfiles --error --flat -V views/** ./dist/views",
    "build:copyTemplates2": "copyfiles --error -V src/markdowns/**/*.* ./dist/ -u 1",
    "watch": "yarn clean && node esbuild --watch --minify=false",
    "build": "npm-run-all -l -s clean -p build:compile build:bundle build:copyTemplates1 build:copyTemplates2",
    "build:deps": "yarn lerna run --concurrency 1 --no-bail --stream --scope @sap/ux-odata-client --scope @sap/ux-app-templates build",
    "bundle": "yarn build:deps && yarn build && npm pack",
    "test": "cross-env SAP_UX_FIORI_TOOLS_DISABLE_TELEMETRY=true FIORI_TOOLS_DISABLE_SECURE_STORE=true jest --maxWorkers=1 --ci --forceExit --detectOpenHandles",
    "test:sequence": "node -r ts-node/register test/sample-project/app/request-sequence.ts",
    "test:cpe-integration": "playwright test",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:summary": "eslint . --ext .ts,.tsx -f summary",
    "lint:fix": "eslint --fix",
    "lint:fix:all": "eslint . --ext .ts,.tsx --fix",
    "lint:report": "eslint . --ext .ts,.tsx -f multiple ",
    "format:fix": "prettier --write --loglevel silent --ignore-path ../../../.prettierignore",
    "format:fix:all": "prettier --write '**/*.{css,scss,html,js,json,ts,tsx,yaml,yml}' '!**/{out,dist,typings,node_modules}/**' '!**/*.{svg,png,xml}' --ignore-path ../../../.prettierignore",
    "tgz:package": "npm pack",
    "madge": "madge --warning --circular --extensions ts ./"
  },
  "dependencies": {
    "@sap-ux/preview-middleware": "0.16.87",
    "@ui5/fs": "3.0.4",
    "connect-livereload": "0.6.1",
    "debug": "4.3.5",
    "express": "4.21.1",
    "livereload": "0.9.3",
    "semver": "7.6.3",
    "update-notifier-cjs": "5.1.6"
  },
  "optionalDependencies": {
    "keytar": "7.9.0"
  },
  "devDependencies": {
    "@playwright/test": "1.36.2",
    "@sap-ux/adp-tooling": "0.12.59",
    "@sap-ux/backend-proxy-middleware": "0.8.14",
    "@sap-ux/btp-utils": "0.15.2",
    "@sap-ux/deploy-tooling": "0.15.19",
    "@sap-ux/feature-toggle": "0.2.0",
    "@sap-ux/guided-answers-helper": "0.0.2",
    "@sap-ux/logger": "0.6.0",
    "@sap-ux/project-access": "1.28.0",
    "@sap-ux/reload-middleware": "0.2.3",
    "@sap-ux/serve-static-middleware": "0.2.0",
    "@sap-ux/store": "0.9.2",
    "@sap-ux/telemetry": "0.5.31",
    "@sap-ux/ui5-config": "0.25.0",
    "@sap-ux/ui5-info": "0.8.1",
    "@sap-ux/ui5-proxy-middleware": "1.4.8",
    "@sap/ux-app-templates": "1.15.3",
    "@sap/ux-odata-client": "1.15.3",
    "@sap/ux-ui5-info": "1.15.3",
    "@types/fs-extra": "11.0.4",
    "@types/jest-dev-server": "5.0.3",
    "@types/jquery": "3.5.29",
    "@types/marked": "4.0.1",
    "@types/prompts": "2.0.14",
    "@types/supertest": "6.0.2",
    "@types/yazl": "2.4.2",
    "async-retry": "1.3.1",
    "axios": "1.7.4",
    "chalk": "4.1.2",
    "cross-env": "6.0.3",
    "dotenv": "8.2.0",
    "ejs": "3.1.10",
    "fs-extra": "11.2.0",
    "hasbin": "1.2.3",
    "http-proxy-middleware": "2.0.7",
    "i18next": "19.0.2",
    "jest-dev-server": "7.0.0",
    "lodash": "4.17.21",
    "marked": "4.0.10",
    "marked-terminal": "4.2.0",
    "nock": "13.5.4",
    "portfinder": "1.0.32",
    "prompts": "2.4.2",
    "serve-static": "1.16.2",
    "supertest": "6.3.4",
    "tree-kill": "1.2.2",
    "typescript": "5.6.2",
    "wait-for-expect": "3.0.2",
    "yaml": "2.2.2",
    "yargs-parser": "20.2.6",
    "yazl": "2.5.1"
  },
  "ui5": {
    "dependencies": []
  },
  "files": [
    "bin",
    "dist",
    "doc",
    "README.md",
    "CHANGELOG.md",
    "package.json",
    "ui5.yaml",
    "!*.tsbuildinfo",
    "!**/*.tsbuildinfo",
    "!*.map",
    "!**/*.map"
  ],
  "jestSonar": {
    "reportPath": "reports/test/unit",
    "reportFile": "test-report.xml"
  },
  "eslint-formatter-multiple": {
    "formatters": [
      {
        "name": "stylish",
        "output": "console"
      },
      {
        "name": "json",
        "output": "file",
        "path": "reports/lint/eslint.json"
      },
      {
        "name": "checkstyle",
        "output": "file",
        "path": "reports/lint/eslint.checkstyle.xml"
      }
    ]
  }
}
